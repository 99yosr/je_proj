
generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}


model News {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  author      String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


