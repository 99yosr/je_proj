generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Junior {
  id            Int      @id @default(autoincrement())
  created_at    DateTime @default(now())
  name          String
  role          String
  city          String
  contact_email String?
}
